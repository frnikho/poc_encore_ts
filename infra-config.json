{
  "$schema": "https://encore.dev/schemas/infra.schema.json",
  "metadata": {
    "name": "my-infra",
    "description": "My infrastructure",
    "version": "1.0.0"
  },
  "sql_servers": [
    {
      "host": "encore-db-kes2m4:5432",
      "databases": {
        "encore_db": {
          "username": "encore_usr",
          "password": {"$env": "DB_PASSWORD"}
        }
      }
    }
  ],
  "pubsub": [
    {
      "type": "nsq",
      "hosts": "nsq:4150",
      "topics": {
        "login": {
          "name": "login",
          "subscriptions": {
            "login_history": {
              "name": "login_history"
            }
          }
        },
        "register": {
          "name": "register",
        }
      }
    }
  ],
  "secrets": {
    "REDIS_URL": {
      "$env": "REDIS_URL"
    }
  }
}